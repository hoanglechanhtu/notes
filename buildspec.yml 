version: 0.2

phases:
  install:
    runtime-versions:
      java: corretto8
  pre_build:
      commands:
        - echo "Entered the pre-build phase"
    build:
      commands:
        - echo "Entered build phase"
        - mvn clean install
    post_build:
      commands:
        - echo "Entered the post-build phase"
        - mv target/aws-note.jar app.jar
artifacts:
  files:
      # publish the now top level app.jar as the artifact
      - app.jar
